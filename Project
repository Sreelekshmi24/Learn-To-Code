#include<stdio.h>
#include<stdlib.h>

void CtoF(float n)
{
    float f;
    f = n * 9/5 + 32;
    printf("Temperature in Farenheit: %.2f",f);
}

void FtoC(float m)
{
    float c;
    c = (m - 32) * 5/9;
    printf("Celcius: %f",c); 
}

void MtoF(float p)
{
    float f;
    f = 3.2808399 * p;
    printf("Feet: %f",f);
}

void FtoM(float q)
{
    float m;
    printf("Feet : ");
    scanf("%f",&q);
    m = q / 3.2808399;
    printf("Meter: %f\n",m);
}

void KMto(float r)
{
  char v;
  float ans;
  printf("KM will be changed in (M=Meter, c=Centimeter,m=milimeter) : \n");
  fflush(stdin);
  scanf("%c",&v);
  if(v=='M')
     ans=r*1000;
  if(v=='c')
     ans=r*100000;
  if(v=='m')
     ans=r*1000000;
  printf("Answer : %.2f",ans);  
}

void ACandDC(int c)
{
    int choice; 
    float ac=0.0,dc=0.0;
    printf("Menu \n 1.AC to DC \n 2.DC to AC \n Enter Choice:"); 
    scanf("%d",&choice); 
    switch(choice) 
    { 
        case 1: printf("Enter AC current: "); 
            scanf("%f",&ac);
            dc=ac*0.636;
            printf("AC=%f, DC=%f",ac,dc);
            break; 
        case 2: printf("Enter DC current: ");
            scanf("%f",&dc);
            ac=dc/0.636;
            printf("AC=%f, DC=%f",ac,dc);
            break; 
        default:printf("Error!"); 
            break; 
    }
}
 
int main()
{
    float c,f,m,feet,km;
    int choice,ch;
    
    printf("\n\tUnit converions");
    printf("\n=======================");
    printf("\n\tMENU");
    printf("\n=======================");
    printf("\n 1] Convert Celcius to Farenheit");
    printf("\n 2] Convert Farenheit to Celcius");
    printf("\n 3] Convert Meter to Feet");
    printf("\n 4] Convert Feet to Meter");
    printf("\n 5] Convert Km to M/cm/mm");
    printf("\n 6] Convert AC to DC and vice versa");
    printf("\n 0] Exit");
    printf("\n\n=======================\n");
    printf("Enter your choice : ");
    scanf("%d",&ch);
    printf("\n-----------------------\n");

    switch (ch) 
    {
      case 1: printf("Celcius ");
              scanf("%f",&c);
              CtoF(c);
        break;
        
      case 2:printf("Farenheit : ");
             scanf("%f",&f);
             FtoC(f);
        break;
        
      case 3: printf("Meter : ");
              scanf("%f",&m);
              MtoF(m);
        break;
      
      case 4: printf("Feet : ");
              scanf("%f",&feet);
              FtoM(feet);
        break;
        
      case 5: printf("K.M. : ");
              scanf("%f",&km);
              KMto(km);
        break;
        
      case 6: printf("Menu \n 1.AC to DC \n 2.DC to AC \n Enter Choice:"); 
              scanf("%d",&choice); 
              ACandDC(choice);
        break;
        
      case 7:
        printf("Thank You.");
        exit(0);
        
      default:
        printf("Invalid input.");
        printf("Please enter correct input.");
    }

    printf("\n\n**********************************\n");
    return 0;
}
